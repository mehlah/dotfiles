# Unix
alias mkdir='mkdir -p'
alias ln='ln -v'
alias ll='ls -al'
alias e="$EDITOR"
alias v="$VISUAL"

# git
alias gdm="git branch --merged | grep -v '\*' | xargs -n 1 git branch -d"

# Bundler
alias b="bundle"

# Rubygems
alias gi="gem install"
alias giv="gem install -v"

# Rails
alias migrate="rake db:migrate && rake db:rollback && rake db:migrate"
alias s="rspec"

# Local
alias play="cd ~/Playground"
