#!/usr/bin/env ruby
require File.join(File.dirname(__FILE__), 'default_libs')

GitStyleBinary.command do
  version "dotfiles-vim-update-plugins 1.0"
  short_desc "Update all vim plugins to latest versions from github"

  run do |command|
    `cd "#{$dotfiles}" && git submodule foreach git pull origin master`
  end

end
